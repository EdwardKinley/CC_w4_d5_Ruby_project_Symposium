<h1>Delegates</h1>

<table>

  <tr>
    <th>Delegate</th>
    <th>Board member</th>
  </tr>

  <% for delegate in @delegates %>

  <tr>
    <td><a href="/delegates/<%= delegate.id %>"><%= delegate.name %></a></td>
    <td <%= delegate.board_member=="t" ? "class='green'" : "class='red'" %>><%= delegate.board_member=="t" ? "yes" : "no" %></td>
  </tr>
  <% end %>

</table>
<br>

<button type="button" name="new delegate">
  <a href="/delegates/new">Add new delegate</a>
</button>
<br>
