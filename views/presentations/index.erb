<h1>Presentations</h1>

<table>

  <tr>
    <th>Presentation</th>
    <th>Time Slot</th>
    <th>Capacity</th>
  </tr>

  <% for presentation in @presentations %>

  <tr>
    <td><a href="/presentations/<%= presentation.id %>"><%= presentation.name %></a></td>
    <td><%= presentation.time_slot %></td>
    <td><%= presentation.capacity %></td>
  </tr>
  <% end %>

</table>
<br>

<button type="button" name="new presentation">
  <a href="/presentations/new">Add new presentation</a>
</button>
<br>
