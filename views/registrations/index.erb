<h1>Registrations</h1>

<table>
  <tr>
    <th>
      <form action="/registrations/new" method="get">
        <input type="submit" value="Create new registration">
      </form>
    </th>
  </tr>
</table>

<br>

<table>

  <tr>
    <th>Registration id (<%= Registration.all.count %>)</th>
    <th>Presentation</th>
    <th>Delegate</th>
  </tr>

  <% for registration in @registrations %>
  <tr>
    <td><a href="/registrations/<%= registration.id %>"><%= registration.id %></a></td>
    <td><a href="/presentations/<%= registration.presentation_id %>"><%= registration.presentation.name %></a></td>
    <td><a href="/delegates/<%= registration.delegate_id %>"><%= registration.delegate.name %></a></td>
  </tr>
  <% end %>

</table>

