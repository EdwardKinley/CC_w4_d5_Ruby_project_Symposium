<h1>Registrations</h1>

<table>

  <tr>
    <th>registration id</th>
    <th>presentation</th>
    <th>delegate</th>
  </tr>

  <% for registration in @registrations %>
  <tr>
    <td><a href="/registrations/<%= registration.id %>"><%= registration.id %></a></td>
    <td><%= registration.presentation.name %></td>
    <td><%= registration.delegate.name %></td>
  </tr>
  <% end %>

</table>
<br>

<table>
  <tr>
    <th>
      <form action="/registrations/new" method="get">
        <input type="submit" value="Create new registration">
      </form>
    </th>
  </tr>
</table>
<br>
